<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".PedirCafeActivity">

    <Button
            android:text="PT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portugal"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:textColor="#000000"/>
    <Button
            android:text="ESP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/espanha"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/portugal" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/inglaterra"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="UK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inglaterra"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="GER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alemanha"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/portugal"/>
    <Button
            android:text="FR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/franca"
            app:layout_constraintEnd_toStartOf="@+id/russia"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/alemanha" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/espanha" app:layout_constraintHorizontal_bias="0.466"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/countrySelected"
            android:text="Country Selected:"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:textColor="#FFFFFF"/>
    <TextView
            android:text="Portugal"
            android:layout_width="58dp"
            android:layout_height="31dp"
            android:id="@+id/country"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/countrySelected"
            android:textColor="#ffffff" android:textStyle="bold"/>
    <TextView
            android:text="Average price for coffee:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textStyle="bold" android:textSize="18sp" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/country" android:textColor="#FFFFFF"/>
    <TextView
            android:text="0.65 euros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:textStyle="bold" android:textColor="#ffffff"/>
    <TextView
            android:text="Popular brands:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/price"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="Delta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/brand"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:textColor="#ffffff" android:textStyle="bold"/>
    <TextView
            android:text="How to ask for coffee:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp" android:textStyle="bold"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/brand"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="Dê-me um café, se faz favor."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/askCoffee"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:textStyle="bold" android:textColor="#ffffff"/>
    <Button
            android:text="Rus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/russia" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/inglaterra"/>
</android.support.constraint.ConstraintLayout>
